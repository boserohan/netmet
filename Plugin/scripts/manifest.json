{
  "manifest_version": 2,
  "name": "NetMet: Meet your network performance",
  "version": "1.0",
  "permissions": ["webRequest", "webRequestBlocking", "webNavigation","storage", "alarms", "tabs", "activeTab", "browsingData","*://www.google.com/*", "*://evernote.com/*", "*://www.ietf.org/","*://www.trustpilot.com/", "*://fast.com/*", "*://fast.com/#", "https://cdn.skypack.dev/", "<all_urls>"],
  "content_security_policy": "script-src 'self' https://unpkg.com https://cdn.skypack.dev/ https://code.highcharts.com;  object-src 'self' https://unpkg.com https://code.highcharts.com;",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://fast.com/"],
      "js": ["bandwidth_check.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["fetch_performancedata.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "run_speedtest.js",
    "styles.css",
    "index.css"
  ]
  
}