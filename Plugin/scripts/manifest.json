{
    "manifest_version": 2,
    "name": "Network Performance Logger",
    "version": "1.0",
    "permissions": ["webRequest", "webRequestBlocking", "storage", "tabs", "activeTab","*://www.google.com/*", "*://evernote.com/*", "*://www.ietf.org/","*://www.trustpilot.com/"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
        "default_icon": "extension-icon.png",
        "default_popup": "index.html"
    }
  }