{
  "manifest_version": 2,
  "name": "Network Performance Logger",
  "version": "1.0",
  "permissions": ["webRequest", "webRequestBlocking", "webNavigation","storage", "alarms", "tabs", "activeTab", "browsingData","*://www.google.com/*", "*://evernote.com/*", "*://www.ietf.org/","*://www.trustpilot.com/", "*://fast.com/*", "*://fast.com/#", "https://cdn.skypack.dev/", "<all_urls>"],
  "content_security_policy": "script-src 'self' https://cdn.skypack.dev/; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/extension-icon.png",
    "default_popup": "test_page.html"
  },
  "content_scripts": [
    {
      "matches": ["https://fast.com/"],
      "js": ["bandwidth_check.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["fetch_performancedata.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "run_speedtest.js"
  ]
  
}