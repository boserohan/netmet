{
  "manifest_version": 2,
  "name": "Network Performance Logger",
  "version": "1.0",
  "permissions": ["webRequest", "webRequestBlocking", "webNavigation","storage", "tabs", "activeTab", "browsingData","*://www.google.com/*", "*://evernote.com/*", "*://www.ietf.org/","*://www.trustpilot.com/", "*://fast.com/*", "*://fast.com/#", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://fast.com/"],
      "js": ["bandwidth_check.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
      "default_icon": "img/extension-icon.png",
      "default_popup": "index.html"
  }
}